---
import '../styles/global.css';
import Header from '../components/Header.astro';
import TopBarAnnouncement from '../components/TopBarAnnouncement.astro';
import Footer from '../components/Footer.astro';

const {
	forceSolidHeader = false,
	title = 'Recurio - WordPress Subscription Management Plugin',
	description = 'Recurio is the ultimate WooCommerce subscription management plugin. Automate recurring billing, reduce churn, and grow your subscription revenue with powerful analytics and seamless integrations.',
	canonicalUrl = 'https://recurio.com/',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="WooCommerce subscriptions, recurring billing, subscription management, WordPress plugin, payment automation, subscription analytics, churn reduction, recurring revenue"
		/>
		<link rel="canonical" href={canonicalUrl} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
		<link rel="icon" type="image/png" href="/images/recurio-favicon.png" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://recurio.com/images/recurio-logo.png" />
		<meta property="og:site_name" content="Recurio" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalUrl} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="https://recurio.com/images/recurio-logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<TopBarAnnouncement />
		<Header forceSolidBackground={forceSolidHeader} />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
