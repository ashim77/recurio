---
const features = [
	{
		name: 'Real-Time Dashboard Updates',
		description: 'Instant subscription status changes with zero lag',
		recurio: 'yes',
		woocommerce: 'no',
		yith: 'limited',
	},
	{
		name: 'Smart Retry & Dunning',
		description: 'Automated payment recovery with intelligent retry logic',
		recurio: 'yes',
		woocommerce: 'limited',
		yith: 'no',
	},
	{
		name: 'Built-in Analytics',
		description: 'Deep insights into MRR, churn, and customer lifetime value',
		recurio: 'yes',
		woocommerce: 'no',
		yith: 'limited',
	},
	{
		name: 'Customer Self-Service Portal',
		description: 'Let customers manage subscriptions without support tickets',
		recurio: 'yes',
		woocommerce: 'limited',
		yith: 'no',
	},
	{
		name: 'Vue.js Interface (Lightning Fast)',
		description: 'Powered by Vue.js for 10x faster load time',
		recurio: 'yes',
		woocommerce: 'no',
		yith: 'no',
	},
	{
		name: 'Free Version Availability',
		description: 'Full-featured free tier with upgrade options',
		recurio: 'yes',
		woocommerce: 'no',
		yith: 'limited',
	},
];

const iconSvg = (type) => {
	if (type === 'yes') {
		return `<div class="inline-flex items-center justify-center w-7 h-7 rounded-lg bg-gradient-to-br from-[#90D144] to-[#7BC135] shadow-md"><svg viewBox="0 0 24 24" class="w-4 h-4 text-white" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M20 6 9 17l-5-5"></path></svg></div>`;
	}
	if (type === 'limited') {
		return `<div class="inline-flex items-center justify-center w-7 h-7 rounded-lg bg-gradient-to-br from-yellow-400 to-orange-400 shadow-md"><svg viewBox="0 0 24 24" class="w-4 h-4 text-white" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg></div>`;
	}
	return `<div class="inline-flex items-center justify-center w-7 h-7 rounded-lg bg-gray-200"><svg viewBox="0 0 24 24" class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></div>`;
};
---

<section class="relative py-24 lg:py-32 overflow-hidden bg-gradient-to-b from-white to-[#E6F4F1]">
	<div class="absolute top-1/4 right-0 w-96 h-96 bg-[#90D144]/5 rounded-full blur-3xl"></div>
	<div class="absolute bottom-1/4 left-0 w-96 h-96 bg-[#13B8A6]/5 rounded-full blur-3xl"></div>

	<div class="relative max-w-7xl mx-auto px-6 lg:px-8">
		<div class="text-center mb-16 lg:mb-20">
			<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-[#90D144]/10 to-[#13B8A6]/10 border border-[#90D144]/20 mb-6">
				<svg viewBox="0 0 24 24" class="w-4 h-4 text-[#90D144]" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M12 3a2 2 0 0 1 1.64.86L16 7l3.14 1.36a2 2 0 0 1 .86 1.64V12l2.14 2.36a2 2 0 0 1 0 2.56L20 19v1.64a2 2 0 0 1-2 2H16l-3.36 2.14a2 2 0 0 1-2.56 0L6 22.64H4a2 2 0 0 1-2-2V19l-2.14-2.08a2 2 0 0 1 0-2.56L2 12V10a2 2 0 0 1 .86-1.64L6 7l2.36-3.14A2 2 0 0 1 10 3z"></path>
				</svg>
				<span class="text-sm font-bold text-[#093865]">COMPARISON GUIDE</span>
			</div>
			<h2 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-[#093865] mb-6 leading-tight">
				Why Stores Are Switching
				<span class="block mt-2 bg-gradient-to-r from-[#13B8A6] to-[#90D144] bg-clip-text text-transparent">
					to Recurio
				</span>
			</h2>
			<p class="text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
				More power. Less hassle. Here's how Recurio compares to the competition.
			</p>
		</div>

		<div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-200">
			<div class="overflow-x-auto">
				<table class="w-full">
					<thead>
						<tr class="border-b border-gray-200">
							<th class="text-left p-6 lg:p-8 bg-gray-50">
								<span class="text-sm font-semibold text-gray-500 uppercase tracking-wide">
									Features
								</span>
							</th>
							<th class="p-6 lg:p-8 text-center bg-gray-50">
								<div class="inline-flex flex-col items-center">
									<div class="w-12 h-12 rounded-xl bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-sm mb-2">
										WC
									</div>
									<span class="text-sm font-semibold text-gray-700">WooCommerce</span>
								</div>
							</th>
							<th class="p-6 lg:p-8 text-center bg-gray-50">
								<div class="inline-flex flex-col items-center">
									<div class="w-12 h-12 rounded-xl bg-gray-200 flex items-center justify-center text-gray-600 font-bold text-sm mb-2">
										YS
									</div>
									<span class="text-sm font-semibold text-gray-700">YITH</span>
								</div>
							</th>
							<th class="p-6 lg:p-8 text-center bg-gradient-to-br from-[#90D144]/5 to-[#13B8A6]/5 relative">
								<div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-[#90D144] to-[#13B8A6]"></div>
								<div class="inline-flex flex-col items-center">
									<div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#90D144] to-[#13B8A6] flex items-center justify-center text-white font-bold text-sm mb-2 shadow-lg">
										R
									</div>
									<span class="text-sm font-bold text-[#093865]">Recurio</span>
									<div class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full bg-[#90D144]/10 border border-[#90D144]/20 mt-2">
										<div class="w-1.5 h-1.5 rounded-full bg-[#90D144] animate-pulse"></div>
										<span class="text-xs font-bold text-[#90D144]">BEST</span>
									</div>
								</div>
							</th>
						</tr>
					</thead>
					<tbody>
						{features.map((feature) => (
							<tr class="feature-row border-b border-gray-100 transition-all duration-300">
								<td class="p-6 lg:p-8">
									<div>
										<div class="font-semibold text-[#093865] mb-1">{feature.name}</div>
										<div class="text-sm text-gray-500">{feature.description}</div>
									</div>
								</td>
								<td class="p-6 lg:p-8 text-center">
									<span set:html={iconSvg(feature.woocommerce)}></span>
								</td>
								<td class="p-6 lg:p-8 text-center">
									<span set:html={iconSvg(feature.yith)}></span>
								</td>
								<td class="p-6 lg:p-8 text-center bg-gradient-to-br from-[#90D144]/[0.02] to-[#13B8A6]/[0.02]">
									<div class="inline-flex flex-col items-center gap-2">
										<span set:html={iconSvg(feature.recurio)}></span>
										{feature.recurio === 'yes' && (
											<span class="recurio-label text-xs font-semibold text-[#13B8A6]">
												Fully Supported
											</span>
										)}
									</div>
								</td>
							</tr>
						))}
					</tbody>
				</table>
			</div>

			<div class="bg-gradient-to-r from-[#90D144]/10 to-[#13B8A6]/10 p-8 lg:p-10 border-t border-[#90D144]/20">
				<div class="flex flex-col lg:flex-row items-center justify-between gap-6">
					<div class="text-center lg:text-left">
						<h3 class="text-2xl font-bold text-[#093865] mb-2">
							Ready to experience the difference?
						</h3>
						<p class="text-gray-600">
							Join thousands of stores growing their recurring revenue with Recurio.
						</p>
					</div>
					<div class="flex flex-col sm:flex-row items-center gap-4 flex-shrink-0">
						<a
						href="https://downloads.wordpress.org/plugin/recurio.zip"
						class="group inline-flex cursor-pointer items-center gap-3 px-8 py-4 bg-gradient-to-r from-[#90D144] to-[#13B8A6] text-white font-bold text-lg rounded-full transition-all duration-300 hover:shadow-2xl hover:shadow-[#90D144]/30 hover:scale-105"
					>
						<svg viewBox="0 0 24 24" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
							<polyline points="7 10 12 15 17 10"></polyline>
							<line x1="12" y1="15" x2="12" y2="3"></line>
						</svg>
						Download Free
					</a>
						<a href="/pricing" class="group inline-flex items-center gap-2 px-8 py-4 bg-white text-[#093865] font-bold text-lg rounded-full border-2 border-[#093865] hover:bg-[#093865] hover:text-white transition-all duration-300">
							Compare Plans
							<svg viewBox="0 0 24 24" class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
								<path d="M5 12h14"></path>
								<path d="m13 5 7 7-7 7"></path>
							</svg>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="mt-12 grid md:grid-cols-3 gap-6">
			<div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
				<div class="flex items-start gap-3">
					<div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#90D144] to-[#13B8A6] flex items-center justify-center flex-shrink-0">
						<svg viewBox="0 0 24 24" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
							<path d="M20 6 9 17l-5-5"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-bold text-[#093865] mb-1">No Hidden Costs</h4>
						<p class="text-sm text-gray-600">Free version with all core features included</p>
					</div>
				</div>
			</div>
			<div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
				<div class="flex items-start gap-3">
					<div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#90D144] to-[#13B8A6] flex items-center justify-center flex-shrink-0">
						<svg viewBox="0 0 24 24" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
							<path d="M20 6 9 17l-5-5"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-bold text-[#093865] mb-1">Easy Migration</h4>
						<p class="text-sm text-gray-600">Switch from any platform in minutes</p>
					</div>
				</div>
			</div>
			<div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
				<div class="flex items-start gap-3">
					<div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#90D144] to-[#13B8A6] flex items-center justify-center flex-shrink-0">
						<svg viewBox="0 0 24 24" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
							<path d="M20 6 9 17l-5-5"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-bold text-[#093865] mb-1">Premium Support</h4>
						<p class="text-sm text-gray-600">24/7 expert help when you need it</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		.feature-row:hover {
			background: linear-gradient(to right, rgba(144, 209, 68, 0.05), rgba(19, 184, 166, 0.05));
		}

		.recurio-label {
			opacity: 0;
			transform: translateY(4px);
			transition: opacity 200ms ease, transform 200ms ease;
		}

		.feature-row:hover .recurio-label {
			opacity: 1;
			transform: translateY(0);
		}
	</style>
</section>
