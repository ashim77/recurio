---
const transactions = [
	{ name: 'Premium Plan', amount: '$49.00' },
	{ name: 'Enterprise Plan', amount: '$299.00' },
	{ name: 'Basic Plan', amount: '$19.00' },
];
---

<section class="min-h-screen relative overflow-hidden bg-gradient-to-br from-[#093865] via-[#0B4A7D] to-[#13B8A6]">
	<div class="absolute inset-0 bg-grid-pattern opacity-10"></div>

	<div class="absolute inset-0">
		<div class="absolute top-20 left-10 w-96 h-96 bg-teal-400/20 rounded-full blur-3xl animate-pulse-slow"></div>
		<div
			class="absolute bottom-20 right-10 w-96 h-96 bg-blue-400/20 rounded-full blur-3xl animate-pulse-slow"
			style="animation-delay: 1s;"
		></div>
	</div>

	<div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 pt-32 pb-16">
		<div class="grid lg:grid-cols-2 gap-12 items-center min-h-[calc(100vh-8rem)]">
			<div class="space-y-8">
				<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20">
					<span class="relative flex h-2 w-2">
						<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#90D144] opacity-75"></span>
						<span class="relative inline-flex rounded-full h-2 w-2 bg-[#90D144]"></span>
					</span>
					<span class="text-sm text-white/90 font-medium">The Smart Way to Manage Subscriptions</span>
				</div>

				<h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold text-white leading-tight">
					Recurring Payments,
					<span class="block bg-gradient-to-r from-[#90D144] to-[#13B8A6] bg-clip-text text-transparent">
						Simplified.
					</span>
				</h1>

				<p class="text-xl text-white/70 leading-relaxed max-w-xl">
					Transform your WordPress site into a subscription powerhouse. Manage recurring payments, track analytics, and grow your revenue—all from one beautiful dashboard.
				</p>

				<div class="flex flex-col sm:flex-row gap-4 pt-4">
					<a
						href="/pricing"
						class="group px-8 py-4 bg-[#90D144] hover:bg-[#7BC135] text-[#093865] font-semibold rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-[#90D144]/30 flex items-center justify-center gap-2"
					>
						Start Free Trial
						<svg viewBox="0 0 24 24" class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M5 12h14" />
							<path d="m13 5 7 7-7 7" />
						</svg>
					</a>
					<button class="px-8 py-4 bg-white/10 cursor-pointer hover:bg-white/20 backdrop-blur-sm text-white font-semibold rounded-full transition-all duration-300 border border-white/20 hover:border-white/40">
						Watch Demo
					</button>
				</div>

				<div class="flex items-center gap-8 pt-6">
					<div class="flex -space-x-3">
						{[1, 2, 3, 4].map((i) => (
							<div
								class="w-10 h-10 rounded-full bg-gradient-to-br from-[#90D144] to-[#13B8A6] border-2 border-[#093865] flex items-center justify-center text-white font-semibold text-sm"
							>
								{String.fromCharCode(64 + i)}
							</div>
						))}
					</div>
					<div class="text-white/80">
						<p class="text-sm font-medium">Built for WordPress & WooCommerce</p>
						<div class="flex items-center gap-1 text-[#90D144]">
							<span class="text-lg">★★★★★</span>
							<span class="text-sm ml-1">Feature-rich & free</span>
						</div>
					</div>
				</div>
			</div>

			<div class="relative lg:scale-110 lg:translate-x-8">
				<div class="relative">
					<div class="absolute -inset-4 bg-gradient-to-br from-[#90D144]/20 to-[#13B8A6]/20 rounded-3xl blur-2xl"></div>

					<div class="relative bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl p-6 space-y-4">
						<div class="flex items-center justify-between">
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 rounded-xl bg-gradient-to-br from-[#90D144] to-[#13B8A6] flex items-center justify-center">
									<svg viewBox="0 0 24 24" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2">
										<rect x="3" y="6" width="18" height="12" rx="2" />
										<line x1="3" y1="10" x2="21" y2="10" />
									</svg>
								</div>
								<div>
									<h3 class="text-white font-semibold text-sm">Recurio Dashboard</h3>
									<p class="text-white/60 text-xs">Real-time analytics</p>
								</div>
							</div>
							<div class="px-3 py-1 bg-[#90D144]/20 rounded-full border border-[#90D144]/40">
								<span class="text-[#90D144] text-xs font-semibold">LIVE</span>
							</div>
						</div>

						<div class="grid grid-cols-2 gap-4">
							<div class="floating-card bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-lg rounded-xl p-4 border border-white/20 shadow-lg">
								<div class="flex items-center justify-between mb-2">
									<svg viewBox="0 0 24 24" class="w-5 h-5 text-[#90D144]" fill="none" stroke="currentColor" stroke-width="2">
										<path d="m3 17 6-6 4 4 7-7" />
										<path d="M21 7v6h-6" />
									</svg>
									<span class="text-[#90D144] text-xs font-semibold">+24%</span>
								</div>
								<p class="text-white/60 text-xs mb-1">Monthly Revenue</p>
								<p class="text-white text-2xl font-bold">$47,890</p>
							</div>

							<div
								class="floating-card bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-lg rounded-xl p-4 border border-white/20 shadow-lg"
								style="animation-delay: 0.2s;"
							>
								<div class="flex items-center justify-between mb-2">
									<svg viewBox="0 0 24 24" class="w-5 h-5 text-[#13B8A6]" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M16 11a4 4 0 1 0-8 0" />
										<path d="M4 20v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1" />
										<circle cx="12" cy="7" r="3" />
									</svg>
									<span class="text-[#13B8A6] text-xs font-semibold">+12%</span>
								</div>
								<p class="text-white/60 text-xs mb-1">Active Subscribers</p>
								<p class="text-white text-2xl font-bold">2,847</p>
							</div>
						</div>

						<div
							class="floating-card bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-lg rounded-xl p-5 border border-white/20 shadow-lg"
							style="animation-delay: 0.4s;"
						>
							<div class="flex items-center justify-between mb-4">
								<h4 class="text-white font-semibold text-sm">Recent Transactions</h4>
								<svg viewBox="0 0 24 24" class="w-4 h-4 text-white/60" fill="none" stroke="currentColor" stroke-width="2">
									<rect x="3" y="4" width="18" height="18" rx="2" />
									<line x1="16" y1="2" x2="16" y2="6" />
									<line x1="8" y1="2" x2="8" y2="6" />
									<line x1="3" y1="10" x2="21" y2="10" />
								</svg>
							</div>
							<div class="space-y-3">
								{transactions.map((transaction) => (
									<div class="flex items-center justify-between py-2">
										<div class="flex items-center gap-3">
											<div class="w-8 h-8 rounded-lg bg-[#90D144]/20 flex items-center justify-center">
												<svg viewBox="0 0 24 24" class="w-4 h-4 text-[#90D144]" fill="none" stroke="currentColor" stroke-width="2">
													<path d="M12 1v22" />
													<path d="M17 5H9.5a3.5 3.5 0 0 0 0 7H14a3.5 3.5 0 0 1 0 7H6" />
												</svg>
											</div>
											<div>
												<p class="text-white text-sm font-medium">{transaction.name}</p>
												<p class="text-white/50 text-xs">Just now</p>
											</div>
										</div>
										<span class="text-[#90D144] font-semibold text-sm">{transaction.amount}</span>
									</div>
								))}
							</div>
						</div>

						<div
							class="floating-card bg-gradient-to-br from-[#90D144]/20 to-[#13B8A6]/20 backdrop-blur-lg rounded-xl p-4 border border-[#90D144]/40 shadow-lg"
							style="animation-delay: 0.6s;"
						>
							<div class="flex items-center gap-3">
								<div class="flex-1">
									<p class="text-white/80 text-xs mb-1">Renewal Rate</p>
									<p class="text-white text-lg font-bold">94.2%</p>
								</div>
								<div class="w-16 h-16">
									<svg class="transform -rotate-90" viewBox="0 0 36 36">
										<path
											d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
											fill="none"
											stroke="rgba(255,255,255,0.2)"
											stroke-width="3"
										/>
										<path
											d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
											fill="none"
											stroke="#90D144"
											stroke-width="3"
											stroke-dasharray="94.2, 100"
										/>
									</svg>
								</div>
							</div>
						</div>
					</div>

					<div
						class="absolute -top-6 -right-6 floating-card bg-gradient-to-br from-white/25 to-white/10 backdrop-blur-xl rounded-2xl p-4 border border-white/30 shadow-2xl w-48"
						style="animation-delay: 0.8s;"
					>
						<div class="flex items-center gap-3">
							<div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#90D144] to-[#13B8A6] flex items-center justify-center">
								<svg viewBox="0 0 24 24" class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2">
									<path d="m3 17 6-6 4 4 7-7" />
									<path d="M21 7v6h-6" />
								</svg>
							</div>
							<div>
								<p class="text-white/70 text-xs">Growth</p>
								<p class="text-white text-xl font-bold">+156%</p>
							</div>
						</div>
					</div>

					<div
						class="absolute -bottom-4 -left-4 floating-card bg-gradient-to-br from-white/25 to-white/10 backdrop-blur-xl rounded-2xl p-4 border border-white/30 shadow-2xl w-44"
						style="animation-delay: 1s;"
					>
						<div class="flex items-center gap-2 mb-2">
							<div class="w-2 h-2 rounded-full bg-[#90D144] animate-pulse"></div>
							<span class="text-white text-xs font-medium">New Subscription</span>
						</div>
						<p class="text-white/70 text-xs">Sarah J. just subscribed</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.bg-grid-pattern {
		background-image:
			linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
			linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
		background-size: 50px 50px;
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	@keyframes pulse-slow {
		0%,
		100% {
			opacity: 0.2;
		}
		50% {
			opacity: 0.3;
		}
	}

	.floating-card {
		animation: float 6s ease-in-out infinite;
	}

	.animate-pulse-slow {
		animation: pulse-slow 4s ease-in-out infinite;
	}
</style>
