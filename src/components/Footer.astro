---
const currentYear = new Date().getFullYear();
const navProduct = [
	{ label: 'Features', href: '/features' },
	{ label: 'Pricing', href: '/pricing' },
	{ label: 'Use Cases', href: '/' },
	{ label: 'Analytics', href: '/' },
	{ label: 'Integrations', href: '/integrations' },
];
const navResources = [
	{ label: 'Documentation', href: 'https://help.wprecurio.com/docs/', external: true },
	{ label: 'API Reference', href: 'https://help.wprecurio.com/docs/', external: true },
	{ label: 'Tutorials', href: '/tutorials' },
	{ label: 'Blog', href: '/blog' },
	{ label: 'Support', href: 'https://help.wprecurio.com/docs/', external: true },
];
const navCompany = [
	{ label: 'About Us', href: '/about' },
	{ label: 'Contact', href: 'https://help.wprecurio.com/ticket/', external: true },
	{ label: 'Privacy Policy', href: '/privacy-policy' },
	{ label: 'Terms of Service', href: '/terms-of-service' },
	{ label: 'Refund Policy', href: '/refund-policy' },
	{ label: 'Careers', href: '/careers' },
];
const socials = [
	{ label: 'Facebook', href: 'https://web.facebook.com/hasthemes' },
	{ label: 'Twitter', href: 'https://x.com/aslamhasib99' },
	{ label: 'LinkedIn', href: 'https://www.linkedin.com/in/aslamhasib/' },
	{ label: 'YouTube', href: 'https://www.youtube.com/@hasthemes/' },
];
---

<footer class="relative bg-gradient-to-br from-[#093865] via-[#0a4270] to-[#093865] text-white overflow-hidden">
	<div class="absolute inset-0">
		<div class="absolute top-20 right-20 w-96 h-96 bg-[#90D144]/10 rounded-full blur-3xl"></div>
		<div class="absolute bottom-20 left-20 w-96 h-96 bg-[#13B8A6]/10 rounded-full blur-3xl"></div>
	</div>

	<div class="relative max-w-7xl mx-auto px-6 lg:px-8 py-16 lg:py-20">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 mb-12">
			<div>
				<h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-[#90D144] to-[#13B8A6] bg-clip-text text-transparent">
					Recurio
				</h3>
				<p class="text-gray-300 mb-6 leading-relaxed">
					The ultimate WooCommerce subscription management plugin. Automate billing, reduce churn, and grow your recurring revenue.
				</p>
				<div class="flex items-center gap-4">
					{socials.map((social) => (
						<a
							href={social.href}
							target="_blank"
							rel="noopener noreferrer"
							class="w-10 h-10 rounded-full bg-white/10 hover:bg-gradient-to-r hover:from-[#90D144] hover:to-[#13B8A6] flex items-center justify-center transition-all duration-300 hover:scale-110"
							aria-label={social.label}
						>
							<span class="text-sm font-semibold">{social.label.slice(0, 1)}</span>
						</a>
					))}
				</div>
			</div>

			<div>
				<h4 class="text-lg font-bold mb-4">Product</h4>
				<ul class="space-y-3">
					{navProduct.map((item) => (
						<li>
							<a href={item.href} class="text-gray-300 hover:text-[#90D144] transition-colors duration-200">
								{item.label}
							</a>
						</li>
					))}
				</ul>
			</div>

			<div>
				<h4 class="text-lg font-bold mb-4">Resources</h4>
				<ul class="space-y-3">
					{navResources.map((item) => (
						<li>
							<a
								href={item.href}
								target={item.external ? '_blank' : undefined}
								rel={item.external ? 'noopener noreferrer' : undefined}
								class="text-gray-300 hover:text-[#90D144] transition-colors duration-200"
							>
								{item.label}
							</a>
						</li>
					))}
				</ul>
			</div>

			<div>
				<h4 class="text-lg font-bold mb-4">Company</h4>
				<ul class="space-y-3">
					{navCompany.map((item) => (
						<li>
							<a
								href={item.href}
								target={item.external ? '_blank' : undefined}
								rel={item.external ? 'noopener noreferrer' : undefined}
								class="text-gray-300 hover:text-[#90D144] transition-colors duration-200"
							>
								{item.label}
							</a>
						</li>
					))}
				</ul>
			</div>
		</div>

		<div class="border-t border-white/10 pt-8">
			<div class="flex flex-col md:flex-row items-center justify-between gap-4">
				<p class="text-gray-400 text-sm">Â© {currentYear} Recurio. All rights reserved.</p>
				<div class="flex items-center gap-2 text-gray-400 text-sm">
					<span>Made with</span>
					<svg viewBox="0 0 24 24" class="w-4 h-4 text-red-500 fill-red-500" aria-hidden="true">
						<path d="M12 21s-7-4.35-9.33-8.14C.5 9.54 2.24 6 5.5 6c2.02 0 3.57 1.2 4.5 2.45C10.93 7.2 12.48 6 14.5 6 17.76 6 19.5 9.54 21.33 12.86 19 16.65 12 21 12 21z" />
					</svg>
					<span>for WooCommerce store owners</span>
				</div>
			</div>
		</div>

		<div class="mt-8 pt-8 border-t border-white/10">
			<div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
				<div class="flex flex-col md:flex-row items-center justify-between gap-6">
					<div class="text-center md:text-left">
						<h5 class="text-lg font-bold mb-2">Stay Updated</h5>
						<p class="text-gray-300 text-sm">
							Subscribe to get the latest features and updates.
						</p>
					</div>
					<div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
						<div class="relative flex-1 md:w-64">
							<svg viewBox="0 0 24 24" class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M22 6l-10 7L2 6" />
								<rect x="2" y="4" width="20" height="16" rx="2" ry="2" />
							</svg>
							<input
								type="email"
								placeholder="Enter your email"
								disabled
								class="w-full pl-10 pr-4 py-3 bg-white/10 border border-white/20 rounded-full text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#90D144] transition-all duration-200 disabled:opacity-50"
							/>
						</div>
						<button
							type="button"
							disabled
							class="px-6 py-3 bg-gradient-to-r from-[#90D144] to-[#13B8A6] text-white font-bold rounded-full transition-all duration-300 whitespace-nowrap disabled:opacity-50"
						>
							Subscribe
						</button>
					</div>
				</div>
				<p class="text-center text-gray-400 text-sm mt-4">
					Newsletter signup will be enabled later.
				</p>
			</div>
		</div>
	</div>
</footer>
