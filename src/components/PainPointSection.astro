---
const painPoints = [
	{
		icon: 'alert',
		title: 'Complicated Setup',
		description: 'Most subscription tools require developers and take weeks to configure properly.',
		stat: '87% report setup issues',
	},
	{
		icon: 'clock',
		title: 'Manual Management',
		description: 'Tracking renewals, cancellations, and failed payments manually wastes hours daily.',
		stat: '12+ hours per week',
	},
	{
		icon: 'card',
		title: 'Payment Failures',
		description: 'Lost revenue from failed payments with no automated retry or recovery system.',
		stat: '30% revenue loss',
	},
	{
		icon: 'chart',
		title: 'No Clear Insights',
		description: 'Critical metrics scattered across multiple platforms with no unified view.',
		stat: 'Limited visibility',
	},
];

const solutions = [
	{
		icon: 'zap',
		title: 'Install in Minutes',
		description: 'One-click WordPress installation with automatic configuration.',
		color: 'from-[#90D144] to-[#7BC135]',
	},
	{
		icon: 'shield',
		title: 'Smart Automation',
		description: 'Automatic payment retries, renewal reminders, and churn prevention.',
		color: 'from-[#13B8A6] to-[#0D9488]',
	},
	{
		icon: 'chart',
		title: 'Unified Dashboard',
		description: 'All metrics, customers, and payments in one beautiful interface.',
		color: 'from-[#093865] to-[#0B4A7D]',
	},
];
---

<section class="relative bg-white py-24 lg:py-32 overflow-hidden">
	<div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent"></div>

	<div class="max-w-7xl mx-auto px-6 lg:px-8">
		<div class="text-center mb-16">
			<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-50 border border-red-100 mb-6">
				<svg viewBox="0 0 24 24" class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" stroke-width="2">
					<circle cx="12" cy="12" r="10" />
					<line x1="12" y1="8" x2="12" y2="12" />
					<line x1="12" y1="16" x2="12.01" y2="16" />
				</svg>
				<span class="text-sm text-red-700 font-medium">The Subscription Struggle is Real</span>
			</div>
			<h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
				Built to Solve Real
				<span class="block bg-gradient-to-r from-[#093865] to-[#13B8A6] bg-clip-text text-transparent">
					Subscription Problems
				</span>
			</h2>
			<p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
				We talked to hundreds of WordPress site owners. Here's what keeps them up at nightâ€”and how Recurio fixes it.
			</p>
		</div>

		<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
			{painPoints.map((point) => (
				<div class="group relative bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-200 hover:border-red-200 hover:shadow-xl transition-all duration-300">
					<div class="absolute inset-0 bg-gradient-to-br from-red-500/0 to-red-500/0 group-hover:from-red-500/5 group-hover:to-red-500/0 rounded-2xl transition-all duration-300"></div>
					<div class="relative">
						<div class="w-12 h-12 rounded-xl bg-red-50 group-hover:bg-red-100 flex items-center justify-center mb-4 transition-colors duration-300">
							{point.icon === 'alert' && (
								<svg viewBox="0 0 24 24" class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="12" cy="12" r="10" />
									<line x1="12" y1="8" x2="12" y2="12" />
									<line x1="12" y1="16" x2="12.01" y2="16" />
								</svg>
							)}
							{point.icon === 'clock' && (
								<svg viewBox="0 0 24 24" class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="12" cy="12" r="10" />
									<polyline points="12 6 12 12 16 14" />
								</svg>
							)}
							{point.icon === 'card' && (
								<svg viewBox="0 0 24 24" class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" stroke-width="2">
									<rect x="3" y="6" width="18" height="12" rx="2" />
									<line x1="3" y1="10" x2="21" y2="10" />
								</svg>
							)}
							{point.icon === 'chart' && (
								<svg viewBox="0 0 24 24" class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" stroke-width="2">
									<line x1="12" y1="20" x2="12" y2="10" />
									<line x1="18" y1="20" x2="18" y2="4" />
									<line x1="6" y1="20" x2="6" y2="16" />
								</svg>
							)}
						</div>
						<h3 class="text-lg font-bold text-gray-900 mb-2">{point.title}</h3>
						<p class="text-gray-600 text-sm mb-4 leading-relaxed">{point.description}</p>
						<div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-red-50 border border-red-100">
							<span class="text-xs font-semibold text-red-700">{point.stat}</span>
						</div>
					</div>
				</div>
			))}
		</div>

		<div class="relative">
			<div class="absolute inset-0 bg-gradient-to-br from-[#093865] to-[#13B8A6] rounded-3xl opacity-5"></div>
			<div class="relative bg-gradient-to-br from-gray-50 to-white rounded-3xl border border-gray-200 p-8 lg:p-12">
				<div class="text-center mb-12">
					<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-[#90D144]/10 to-[#13B8A6]/10 border border-[#90D144]/20 mb-6">
						<div class="w-2 h-2 rounded-full bg-[#90D144] animate-pulse"></div>
						<span class="text-sm text-[#093865] font-semibold">The Recurio Solution</span>
					</div>
					<h3 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
						Everything You Need,
						<span class="block text-[#093865]">Nothing You Don't</span>
					</h3>
					<p class="text-lg text-gray-600 max-w-2xl mx-auto">
						Purpose-built for WordPress site owners who want subscription revenue without the headaches.
					</p>
				</div>

				<div class="grid md:grid-cols-3 gap-8">
					{solutions.map((solution) => (
						<div class="relative group">
							<div class={`absolute inset-0 bg-gradient-to-br ${solution.color} opacity-0 rounded-2xl transition-all duration-300`}></div>
							<div class="relative text-center">
								<div class={`w-16 h-16 mx-auto rounded-2xl bg-gradient-to-br ${solution.color} flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300`}>
									{solution.icon === 'zap' && (
										<svg viewBox="0 0 24 24" class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M13 2 3 14h7l-1 8 10-12h-7l1-8z" />
										</svg>
									)}
									{solution.icon === 'shield' && (
										<svg viewBox="0 0 24 24" class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
										</svg>
									)}
									{solution.icon === 'chart' && (
										<svg viewBox="0 0 24 24" class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2">
											<line x1="12" y1="20" x2="12" y2="10" />
											<line x1="18" y1="20" x2="18" y2="4" />
											<line x1="6" y1="20" x2="6" y2="16" />
										</svg>
									)}
								</div>
								<h4 class="text-xl font-bold text-gray-900 mb-3">{solution.title}</h4>
								<p class="text-gray-600 leading-relaxed">{solution.description}</p>
							</div>
						</div>
					))}
				</div>

				<div class="mt-12 text-center">
					<button class="group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-[#093865] to-[#13B8A6] text-white font-semibold rounded-full transition-all duration-300 hover:shadow-2xl hover:shadow-[#093865]/30 hover:scale-105">
						See How It Works
						<div class="w-6 h-6 rounded-full bg-white/20 flex items-center justify-center group-hover:bg-white/30 transition-colors">
							<svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
							</svg>
						</div>
					</button>
				</div>
			</div>
		</div>

		<div class="mt-16 grid md:grid-cols-3 gap-8 text-center">
			<div class="group cursor-default">
				<div class="text-4xl lg:text-5xl font-bold bg-gradient-to-r from-[#093865] to-[#13B8A6] bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300">
					2 mins
				</div>
				<p class="text-gray-600 font-medium">Average Setup Time</p>
			</div>
			<div class="group cursor-default">
				<div class="text-4xl lg:text-5xl font-bold bg-gradient-to-r from-[#093865] to-[#13B8A6] bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300">
					95%
				</div>
				<p class="text-gray-600 font-medium">Payment Success Rate</p>
			</div>
			<div class="group cursor-default">
				<div class="text-4xl lg:text-5xl font-bold bg-gradient-to-r from-[#093865] to-[#13B8A6] bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300">
					24/7
				</div>
				<p class="text-gray-600 font-medium">Automated Monitoring</p>
			</div>
		</div>
	</div>
</section>
