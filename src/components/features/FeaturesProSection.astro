---
const { iconSvg, proFeatures } = Astro.props;
---

<div
	data-section
	id="pro-features"
	class="py-24 bg-gradient-to-br from-[#093865] via-[#0B4A7D] to-[#13B8A6] relative overflow-hidden"
>
	<div class="absolute inset-0 opacity-10">
		<div
			class="absolute inset-0"
			style="background-image: linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px); background-size: 40px 40px;"
		></div>
	</div>

	<div class="relative max-w-7xl mx-auto px-6 lg:px-8">
		<div class="text-center mb-16">
			<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-6">
				<span class="inline-flex" set:html={iconSvg('lock', 'w-4 h-4 text-[#90D144]')}></span>
				<span class="text-sm font-bold text-white">PRO FEATURES</span>
			</div>
			<h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
				8 Premium Features
				<span class="block mt-2 bg-gradient-to-r from-[#90D144] to-[#13B8A6] bg-clip-text text-transparent">
					To Supercharge Growth
				</span>
			</h2>
			<p class="text-xl text-white/80 max-w-3xl mx-auto">
				Advanced capabilities that increase revenue, reduce churn, and provide enterprise-level insights. Each feature pays for itself many times over.
			</p>
		</div>

		<div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
			{proFeatures.map((feature, idx) => (
				<div
					class="feature-card group relative bg-white/10 backdrop-blur-lg rounded-2xl border-2 border-white/20 hover:border-[#90D144] transition-all duration-500 overflow-hidden"
					data-category={feature.category}
					data-feature-id={feature.id}
					style={`transition-delay: ${idx * 50}ms;`}
				>
					<div class={`absolute inset-0 bg-gradient-to-br ${feature.gradient} opacity-10 group-hover:opacity-20 transition-opacity duration-500`}></div>

					<div class="relative p-8">
						<div class="flex items-start justify-between mb-4">
							<div class={`w-16 h-16 rounded-xl bg-gradient-to-br ${feature.gradient} flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-300`}>
								<span class="inline-flex" set:html={iconSvg(feature.icon, 'w-8 h-8 text-white')}></span>
							</div>
							<div class="flex items-center gap-2 px-3 py-1.5 bg-gradient-to-r from-[#90D144] to-[#13B8A6] rounded-full shadow-lg">
								<span class="inline-flex" set:html={iconSvg('lock', 'w-3 h-3 text-white')}></span>
								<span class="text-xs font-bold text-white">PRO</span>
							</div>
						</div>

						<h3 class="text-2xl font-bold text-white mb-2 group-hover:text-[#90D144] transition-colors">
							{feature.title}
						</h3>
						<p class="text-sm font-semibold text-[#90D144] mb-3">
							{feature.tagline}
						</p>
						<p class="text-white/80 text-sm mb-4">
							{feature.description}
						</p>

						<div class="bg-[#90D144]/20 backdrop-blur-sm rounded-lg p-4 mb-4 border border-[#90D144]/30">
							<div class="flex items-start gap-2">
								<span class="inline-flex" set:html={iconSvg('dollar', 'w-5 h-5 text-[#90D144] flex-shrink-0 mt-0.5')}></span>
								<div>
									<div class="text-xs font-semibold text-[#90D144] mb-1">ROI & VALUE</div>
									<div class="text-sm text-white font-medium">{feature.roi}</div>
									{feature.savings && (
										<div class="text-xs text-white/70 mt-1">{feature.savings}</div>
									)}
								</div>
							</div>
						</div>

						<button
							type="button"
							data-expand={feature.id}
							data-expand-default="View Details"
							class="flex items-center gap-2 text-[#90D144] font-semibold text-sm hover:gap-3 transition-all mb-4"
						>
							<span data-expand-label>View Details</span>
							<span class="inline-flex" set:html={iconSvg('chevron-down', 'w-4 h-4 transition-transform')}></span>
						</button>

						<div class="feature-details space-y-4 hidden">
							<div>
								<h4 class="font-bold text-white text-sm mb-2">Key Benefits:</h4>
								<ul class="space-y-2">
									{feature.benefits.map((benefit) => (
										<li class="flex items-start gap-2 text-sm text-white/80">
											<span class="inline-flex" set:html={iconSvg('check', 'w-4 h-4 text-[#90D144] flex-shrink-0 mt-0.5')}></span>
											<span>{benefit}</span>
										</li>
									))}
								</ul>
							</div>
							<div>
								<h4 class="font-bold text-white text-sm mb-2">Features Include:</h4>
								<ul class="space-y-2">
									{feature.features.map((item) => (
										<li class="flex items-start gap-2 text-sm text-white/80">
											<div class="w-1.5 h-1.5 rounded-full bg-[#90D144] flex-shrink-0 mt-1.5"></div>
											<span>{item}</span>
										</li>
									))}
								</ul>
							</div>
						</div>

						<a href="/pricing" class="mt-6 w-full group/btn px-6 py-3 bg-gradient-to-r from-[#90D144] to-[#13B8A6] text-[#093865] font-bold rounded-xl hover:shadow-2xl hover:shadow-[#90D144]/50 transition-all duration-300 flex items-center justify-center gap-2">
							<span>Upgrade to PRO</span>
							<span class="inline-flex" set:html={iconSvg('arrow-right', 'w-5 h-5 group-hover/btn:translate-x-1 transition-transform')}></span>
						</a>
					</div>
				</div>
			))}
		</div>
	</div>
</div>
