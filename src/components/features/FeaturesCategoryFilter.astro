---
const { iconSvg, categories } = Astro.props;
---

<div class="sticky top-0 z-40 bg-white/95 backdrop-blur-lg border-b border-gray-200 shadow-sm">
	<div class="max-w-7xl mx-auto px-6 lg:px-8">
		<div class="flex items-center gap-4 py-4 overflow-x-auto" data-category-filters>
			{categories.map((cat) => (
				<button
					type="button"
					data-category-button={cat.id}
					class="flex items-center gap-2 px-4 py-2 cursor-pointer rounded-full font-semibold text-sm whitespace-nowrap transition-all duration-300 bg-gray-100 text-gray-600 hover:bg-gray-200"
				>
					<span class="inline-flex" set:html={iconSvg(cat.icon, 'w-4 h-4')}></span>
					{cat.label}
					{cat.id === 'all' && (
						<span class="ml-1 px-2 py-0.5 rounded-full text-xs bg-white/20">26</span>
					)}
				</button>
			))}
		</div>
	</div>
</div>
